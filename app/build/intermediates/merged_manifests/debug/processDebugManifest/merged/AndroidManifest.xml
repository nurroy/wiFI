<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.indoorpositioning"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.indoorpositioning.Scan"
            android:label="Scan" >
        </activity>
        <activity
            android:name="com.example.indoorpositioning.Positions"
            android:label="Calibrate" >
        </activity>
        <activity
            android:name="com.example.indoorpositioning.Buildings"
            android:label="Buildings" >
        </activity>
        <activity
            android:name="com.example.indoorpositioning.StartingScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.indoorpositioning.Locate"
            android:label="Locate" >
        </activity>
        <activity
            android:name="com.example.indoorpositioning.AndroidDatabaseManager"
            android:label="DatabaseManager" />
        <activity
            android:name="com.example.indoorpositioning.FriendlyWifis"
            android:label="Choose Friendly Wifis" >
        </activity>
    </application>

</manifest>